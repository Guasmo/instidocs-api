generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  fullName String?
  role     Role    @default(STUDENT)
  isActive Boolean @default(true)

  // Relations
  documents Document[]

  // Courses relations
  enrolledCourses Course[] @relation("StudentCourses")
  teachingCourses Course[] @relation("TeacherCourses")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum Section {
  MATUTINA
  VESPERTINA
  NOCTURNA
}

model Course {
  id          String  @id @default(uuid())
  name        String
  description String?
  section     Section @default(MATUTINA)
  startYear   Int     @default(2025)
  endYear     Int     @default(2026)





  teacherId String
  teacher   User   @relation("TeacherCourses", fields: [teacherId], references: [id])

  students User[] @relation("StudentCourses")

  documents Document[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("courses")
}

model Document {
  id          String  @id @default(uuid())
  name        String // Original name
  filename    String // Stored name
  url         String
  mimetype    String
  size        Int
  description String? @db.Text

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  courseId String?
  course   Course? @relation(fields: [courseId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("documents")
}

